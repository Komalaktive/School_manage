    <!-- Top menu item -->

    <menuitem name="student" id="student_menu_root" />

    <!-- menu categories -->

    <menuitem name="Menu 1" id="student_menu_1" parent="student_menu_root" />
    <menuitem name="Menu 2" id="student_menu_2" parent="student_menu_root" />

    <!-- actions -->

    <menuitem name="List" id="student_menu_1_list" parent="student_menu_1" action="student_action_window" />
    <menuitem name="Server to list" id="student" parent="student_menu_2"/>

  </data>
</odoo>